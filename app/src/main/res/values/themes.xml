<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HorrorKotlin" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <!--        <item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/black</item>

        <item name="popupTheme">@style/menus</item>

    </style>

    <style name="menus" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:itemBackground">#3A3A3A</item>
        <item name="android:colorBackground">#3A3A3A</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

</resources>