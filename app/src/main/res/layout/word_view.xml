<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycleview">

    <TextView
        android:id="@+id/list_number"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/jsarirang"
        android:text="9"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/list_line"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:fontFamily="@font/jsarirang"
        android:layout_marginLeft="5dp"
        android:text="|"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/list_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/jsarirang"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="32dp"
        android:autoSizeMinTextSize="2dp"
        android:autoSizeStepGranularity="2dp"
        android:text="무서운 이야기"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:textSize="32dp" />

</LinearLayout>